<div class="container mt-5">
  <h1 class="mb-3">My subjects</h1>
  <ul class="list-group">
    <% @subjects.each do |subject| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= subject.name %>
        <%= link_to "Ver mÃ¡s", subject_path(subject), class: "btn btn-info btn-sm" %>
      </li>
    <% end %>
  </ul>

  <% if @subject && @subject.persisted? %>
    <div class="card mt-3">
      <div class="card-body">
        <%= @subject.content %>
        <%= link_to "Delete", subject_path(@subject), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>

  <%= link_to "Crear materia", new_subject_path, class: "btn btn-primary mt-3" %>
</div>


