<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @subject.name %></h2>

      <p class="card-text">
        <strong>Grado:</strong> <%= @subject.grade_subject %>
      </p>

      <p class="card-text">
        <strong>Descripción:</strong> <%= @subject.description %>
      </p>

      <div>
        <%= link_to "Edit", edit_subject_path(@subject), class: "btn btn-outline-success mr-2" %>
        <%= link_to "Delete", subject_path(@subject), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "¿Seguro que quieres borrar la materia?" } %>
        <%= link_to "Regresar al inicio", subjects_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
