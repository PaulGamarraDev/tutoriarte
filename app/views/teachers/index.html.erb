
<div class="container">
  <h1 class="text-center mt-5 mb-5">Conoce a Nuestros Profesores</h1>

  <div class="card-group">
    <div class="row">
      <% @users.all.each do |user| %>
        <% if user.role == "Profesor" %>
          <div class="col-3">
            <div class="card mb-3" style="width: 18rem;">
              <% if user.photo.attached? %>
                <%= image_tag user.photo, class: "card-img-top", alt: "foto de perfil del profesor" %>
              <% else %>
                <%= image_tag "https://res.cloudinary.com/dgwpse2wf/image/upload/v1701733180/undefined_user_rcbpiz.jpg", class: "card-img-top", alt: "falta foto de perfil del profesor" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title text-center"><%= user.first_name %> <%= user.last_name %></h5>
                <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
                <div class="container row">
                  <%= link_to "Perfil del Profe", teacher_path(id: user.id), class: "btn btn-primary mx-2 mb-1" %>
                  <%= link_to t('.Reserva'), new_booking_path, class: "btn btn-primary mx-2" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




